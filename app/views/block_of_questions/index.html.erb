<p id="notice"><%= notice %></p>

<h1>Block Of Questions</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th>Option</th>
      <th>Question</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @block_of_questions.each do |block_of_question| %>
      <tr>
        <td><%= block_of_question.text %></td>
        <td><%= block_of_question.option %></td>
        <td><%= block_of_question.question %></td>
        <td><%= link_to 'Show', block_of_question %></td>
        <td><%= link_to 'Edit', edit_block_of_question_path(block_of_question) %></td>
        <td><%= link_to 'Destroy', block_of_question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

